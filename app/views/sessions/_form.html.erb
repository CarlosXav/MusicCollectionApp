<%= form_with(scope: :session, url: login_path, class: "shadow-lg p-3 mb-3 bg-body rounded container", local: true) do |form| %>
  
  <div>
    <% unless notice.nil? %>
      <div class="alert alert-danger"><%= notice %></div>
    <% end %>
    <div class="row align-items-center">
      
      <div class="input-group mb-3">
        <%= form.label :username, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.text_field :username, placeholder: "Username", class: "col-sm-10 form-control shadow-sm" %>
      </div>

      <div class="input-group mb-3">
        <%= form.label :password, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.password_field :password, placeholder: "Password", class: "col-sm-10 form-control shadow-sm" %>
      </div>

      <div class="form-group mb-3 d-flex justify-content-center align-items-center">
        <%= form.submit "Log in", class: "shadow-sm btn btn-outline-dark btn-lg" %>
        <span class="text-muted m-2">or</span>
        <a class="text-primary ", href="/signup">Sign up</a>
      </div>
    </div>
  </div>
<% end %>
