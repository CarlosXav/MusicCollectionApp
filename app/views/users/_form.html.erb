<%= form_with(model: @user, class: "shadow-lg p-3 mb-3 bg-body rounded container", local: true) do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <div class="row align-items-center">
      <div class="input-group mb-3">
        <%= form.label :first_name, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.text_field :first_name, placeholder: "Your first name", class: "col-sm-10 form-control shadow-sm" %>
      </div>

      <div class="input-group mb-3">
        <%= form.label :last_name, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.text_field :last_name, placeholder: "Your last name", class: "col-sm-10 form-control shadow-sm" %>
      </div>

      <div class="input-group mb-3">
        <%= form.label :email, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.email_field :email, placeholder: "Your email", class: "col-sm-10 form-control shadow-sm" %>
      </div>

      <div class="input-group mb-3">
        <%= form.label :username, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.text_field :username, placeholder: "Your desired username", class: "col-sm-10 form-control shadow-sm" %>
      </div>

      <div class="input-group mb-3">
        <%= form.label :password, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.password_field :password, placeholder: "Your desired password", class: "col-sm-10 form-control shadow-sm" %>
      </div>

      <% if logged_in? %>
      
        <% if current_user.root %>
          <div class="input-group mb-3">
            <div class="form-check">
              <%= form.check_box :root, class: "form-check-input shadow-sm" %>
              <%= form.label :root, class: "form-check-label fw-bold", style: "width: 10rem" %>
            </div>
          </div>
          <div class="input-group mb-3">
            <div class="form-check">
              <%= form.check_box :admin, class: "form-check-input shadow-sm" %>
              <%= form.label :admin, class: "form-check-label fw-bold", style: "width: 10rem" %>
            </div>
          </div>
        <% end %>
      <% end %>

      <div class="form-group mb-3 d-flex justify-content-center align-items-center">
        <%= form.submit(@user.new_record? ? "Sign up" : "Update account", class: "shadow-sm btn btn-outline-dark btn-lg") %>
        <% if @user.new_record? %>
          <span class="text-muted m-2">or</span>
          <a class="text-primary ", href="/login">Log in</a>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
