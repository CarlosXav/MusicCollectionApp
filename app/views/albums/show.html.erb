<%= render "album", album: @album %>
  
<div class="container">
  <ul class="nav justify-content-center pb-3 mb-3">
    <% if (current_user == @album.user) || current_user.admin %>
      <li class="nav-item m-2"><%= link_to "Edit this album", edit_album_path(@album), class: "link-secondary" %></li>
    <% end %>
    <% if current_user.admin %>
      <li class="nav-item m-2"><%= link_to "Destroy this album", @user, data: { "turbo-method": :delete }, class: "link-danger" %></li>
    <% end %>
    
  </ul>
</div>
