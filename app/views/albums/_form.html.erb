<%= form_with(model: @album, class: "shadow-lg p-3 mb-3 bg-body rounded container", local: true) do |form| %>
  <% if album.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>

      <ul>
        <% album.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <div class="row align-items-center">
      <div class="input-group mb-3">
        <%= form.label :name, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.text_field :name, placeholder: "The album name", class: "col-sm-10 form-control shadow-sm" %>
      </div>

      <div class="input-group mb-3">
        <%= form.label :artist, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.select( :artist, @artists, {include_blank: "Please choose."}, {class: "col-sm-10 form-select shadow-sm"}) %>
      </div>

      <div class="input-group mb-3">
        <%= form.label :description, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.text_area :description, placeholder: "Give a brief description of the album (optional)", maxlength: "300", class: "col-sm-10 form-control shadow-sm" %>
      </div>

      <div class="input-group mb-3">
        <%= form.label :year, class: "input-group-text text-light bg-secondary fw-bold shadow-sm", style: "width: 10rem" %>
        <%= form.select( :year, 2022.downto(1900), {include_blank: "Please choose."}, {class: "col-sm-10 form-select shadow-sm"}) %>
      </div>

      <div class="form-group mb-3 d-flex justify-content-center align-items-center">
        <%= form.submit(@album.new_record? ? "Create album" : "Update album", class: "shadow-sm btn btn-outline-dark btn-lg") %>
        
      </div>
    </div>
  </div>
<% end %>
